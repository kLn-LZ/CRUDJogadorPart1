<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentTime"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimeFragment">

    <Button
        android:id="@+id/btnModificarTime"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="67dp"
        android:text="@string/btnModificar"
        app:layout_constraintBottom_toBottomOf="@+id/btnListarTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etCidadeTime" />

    <Button
        android:id="@+id/btnInserirTime"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/btnInserir"
        app:layout_constraintBottom_toBottomOf="@+id/btnModificarTime"
        app:layout_constraintEnd_toEndOf="@+id/btnExcluirTime"
        app:layout_constraintStart_toStartOf="@+id/btnExcluirTime"
        app:layout_constraintTop_toTopOf="@+id/btnModificarTime" />

    <Button
        android:id="@+id/btnExcluirTime"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="22dp"
        android:text="@string/btnExcluir"
        app:layout_constraintBottom_toBottomOf="@+id/btnListarTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnListarTime" />

    <Button
        android:id="@+id/btnListarTime"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="56dp"
        android:text="@string/btnListar"
        app:layout_constraintBottom_toTopOf="@+id/tvListarTime"
        app:layout_constraintEnd_toEndOf="@+id/btnModificarTime" />

    <TextView
        android:id="@+id/tvTituloTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="34dp"
        android:text="@string/time"
        app:layout_constraintBottom_toTopOf="@+id/etCodigoTime"
        app:layout_constraintEnd_toEndOf="@+id/etCodigoTime" />

    <EditText
        android:id="@+id/etCodigoTime"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="19dp"
        android:ems="10"
        android:hint="@string/codigoTime"
        android:inputType="number"
        android:textColorHint="@android:color/black"
        android:importantForAutofill="no"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnBuscarTime"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnBuscarTime"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="1dp"
        android:text="@string/btnBuscar"
        app:layout_constraintEnd_toEndOf="@+id/etNomeTime"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etNomeTime"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:hint="@string/nomeTime"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textColorHint="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/etCidadeTime"
        app:layout_constraintEnd_toEndOf="@+id/etCidadeTime"
        app:layout_constraintStart_toStartOf="@+id/etCidadeTime"
        app:layout_constraintTop_toBottomOf="@+id/btnBuscarTime" />

    <EditText
        android:id="@+id/etCidadeTime"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="91dp"
        android:layout_marginBottom="90dp"
        android:ems="10"
        android:hint="@string/cidadeTime"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textColorHint="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/btnExcluirTime"
        app:layout_constraintEnd_toEndOf="@+id/btnModificarTime"
        app:layout_constraintStart_toStartOf="@+id/btnInserirTime"
        app:layout_constraintTop_toBottomOf="@+id/etCodigoTime" />

    <TextView
        android:id="@+id/tvListarTime"
        android:layout_width="411dp"
        android:layout_height="196dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>